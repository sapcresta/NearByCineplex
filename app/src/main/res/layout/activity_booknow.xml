<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dl">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pay2">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/appCompatTextViewUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Your seats have been booked!"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:layout_alignParentLeft="true" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/appCompatTextViewcancel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:gravity="center"
        android:text="Please visit our theatre exactly an hour ago before the showtiming to collect your booked tickets."
        android:textColor="@color/black"
        android:textSize="15dp" />

    <Button
        android:id="@+id/button20"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="154dp"
        android:background="@color/red"
        android:onClick="pay"
        android:text="Pay Now!"
        android:textColor="@color/colorwhite" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="91dp"
        android:text="Number of your booked seats:"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/red"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/noofseats"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView9"
        android:layout_marginEnd="83dp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="serif-monospace"
        android:hint="s"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="50dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="162dp"
        android:background="@color/red"
        android:onClick="viewseats"
        android:text="view seats"
        android:textColor="@color/white" />

    <Button
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/textView11"
        android:layout_marginTop="162dp"
        android:background="@color/red"
        android:onClick="viewseats3"
        android:text="view seats 3"
        android:textColor="@color/white" />


    <Button
        android:layout_width="128dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="198dp"
        android:background="@color/red"
        android:onClick="viewseats2"
        android:text="view seats 2"
        android:textColor="@color/white" />

    <Button
        android:layout_width="128dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/finalpriceid"
        android:layout_marginTop="198dp"
        android:background="@color/red"
        android:onClick="viewseats4"
        android:text="view seats 4"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/foodtext"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="Price per seat: Rs.250"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/dark_green"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/foodtext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="300dp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="serif-monospace"
        android:text="Food cost:"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="25dp"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/foodpriceid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/foodtext"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="serif-monospace"
        android:textSize="25dp"
        android:hint="foodprice"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/red"/>
    <TextView
        android:id="@+id/textView10"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="260dp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="serif-monospace"
        android:text="Ticket cost:"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="25dp"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/totalprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView10"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="serif-monospace"
        android:textSize="25dp"
        android:hint="ticketprice"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/red"/>


    <TextView
        android:id="@+id/finalprice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="serif-monospace"
        android:text="Total cost:"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="25dp"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/finalpriceid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/finalprice"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edittextstyle"
        android:fontFamily="serif-monospace"
        android:textSize="25dp"
        android:hint="totalprice"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/red"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:background="@color/red"
        app:itemIconTint="@color/colorwhite"
        app:itemTextColor="@color/colorwhite"
        app:menu="@menu/navigation" />


</RelativeLayout>

<android.support.design.widget.NavigationView
android:id="@+id/nav_view"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_alignParentStart="true"
android:layout_alignParentTop="true"
android:layout_gravity="start"
app:headerLayout="@layout/navigation_header"
app:menu="@menu/navigation_menu"
android:layout_alignParentLeft="true">
</android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>